@model IEnumerable<AppointmentsSite.Appointments>

@{
    ViewData["Title"] = "Index";
}

<h1>Childs Appointments</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTarget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTarget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentTime)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.AppointmentId">View Note</a> |
                <a asp-action="Delete" asp-route-id="@item.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
