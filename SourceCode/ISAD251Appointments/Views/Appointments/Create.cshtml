@model ISAD251Appointments.Models.Appointments

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppointmentName" class="control-label"></label>
                <input asp-for="AppointmentName" class="form-control" />
                <span asp-validation-for="AppointmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentDescription" class="control-label"></label>
                <input asp-for="AppointmentDescription" class="form-control" />
                <span asp-validation-for="AppointmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentTarget" class="control-label"></label>
                <input asp-for="AppointmentTarget" class="form-control" />
                <span asp-validation-for="AppointmentTarget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentTime" class="control-label"></label>
                <input asp-for="AppointmentTime" class="form-control" />
                <span asp-validation-for="AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointmentNote" class="control-label"></label>
                <input asp-for="AppointmentNote" class="form-control" />
                <span asp-validation-for="AppointmentNote" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="AppointmentIsComplete" /> @Html.DisplayNameFor(model => model.AppointmentIsComplete)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
